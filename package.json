{
  "name": "docker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "mongoose": "^6.7.0",
    "redis": "3.1.2"
  },
  "devDependencies": {
    "nodemon": "2.0.20"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "dev": "nodemon -L index.js",
    "build_image": "docker build -t node-app-image .",
    "run_docker": "docker run -v $(pwd):/app -p 3000:3000 -d --name node-app node-app-image",
    "run_docker_readonly": "docker run -v $(pwd):/app:ro -v /app/node_modules -p 3000:3000 -d --name node-app node-app-image",
    "run_docker_set_env": "docker run -v $(pwd):/app:ro -v /app/node_modules --env  PORT=4000 -p 3000:4000 -d --name node-app node-app-image",
    "run_docker_with_env_file": "docker run -v $(pwd):/app:ro -v /app/node_modules --env-file ./.env  -p 3000:4000 -d --name node-app node-app-image",
    "remove_all_unused_volume": "docker volume prune",
    "remove_all_docker_with_volume": "docker rm node-app -fv",
    "run_by_docker_compose_up": "docker-compose up -d",
    "run_by_docker_compose_up_and_rebuild_images": "docker-compose up -d --build",
    "run_by_docker_compose_down_remove_volume": "docker-compose down -v",
    "run_multiple_docker_compose_up_dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "run_multiple_docker_compose_down_dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down -v",
    "run_docker_compose_up_pro_rebuild_image": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "login_mongo": "docker exec -it docker2-mongo-1 mongosh -u \"root\" -p \"123123\"",
    "use_another_db": "use mydb",
    "show_all_dbs": "show dbs",
    "delete_volume_unused": "docker volume prune",
    "get_ip_address_container": "docker inspect docker2-mongo-1",
    "show_logs_of_container": "docker logs docker2-node-app-1 -f",
    "up_container_without_start_mongo": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --no-deps node-app",
    "access_redis": "docker exec -it docker2-redis-1 redis-cli",
    "scale_container": "docker2 % docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --scale node-app=2",
    "change_name_image_before_push_image": "docker image tag docker2-node-app bigterboy/node-app",
    "push_image": "docker push bigterboy/node-app",
    "update_code_change_only_file_production": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build --no-deps node-app",
    "rebuild_container_production": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --force-recreate --no-deps node-app",
    "build_image_for_production": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build",
    "build_image_for_production_with_special_docker":"docker-compose -f docker-compose.yml -f docker-compose.prod.yml build node-app",
    "push_image_after_build": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml push node-app",
    "pull_image_after_build": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml pull node-app",
    "up_node_app_production": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --no-deps node-app",
    "watchtower": "docker run -d --name watchtower -e -WATCHTOWER_TRACE=true -e WATCHTOWER_DEUBG=true -e WATCHTOWER_POLL_INTERVAL=50 -v /var/run/docker.sock:/var/run/docker.sock containrrr/watchtower app_node-app_1",
    "deploy_swarm": "docker stack deploy -c docker-compose.yml -c docker-compose.prod.yml myapp"
  },
  "author": "",
  "license": "ISC"
}
